<div class="container-fluid bg-white min-vh-100 py-5">
  <div class="container">
    <!-- Page Header -->
    <div class="row">
      <div class="col-12">
        <h1 class="display-4 font-weight-light text-center mb-5 text-dark"><%= @category.name %></h1>
      </div>
    </div>
    <% if @category.products.any? %>
      <!-- Products Grid -->
      <div class="row justify-content-start">
        <% @category.products.each do |product| %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100" style="transition: transform 0.2s ease-in-out;">
              <!-- Product Image -->
              <% if product.image_url.present? %>
                <%= link_to product_path(product), class: "text-decoration-none" do %>
                  <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px; border-radius: 0.25rem 0.25rem 0 0;">
                    <%= image_tag product.image_url,
                                  class: "img-fluid",
                                  alt: product.title,
                                  style: "max-height: 180px; max-width: 180px; object-fit: contain;" %>
                  </div>
                <% end %>
              <% else %>
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px; border-radius: 0.25rem 0.25rem 0 0;">
                  <i class="fas fa-image text-muted" style="font-size: 2rem;"></i>
                </div>
              <% end %>
              <!-- Product Details -->
              <div class="card-body d-flex flex-column p-3">
                <h6 class="card-title font-weight-normal mb-2" style="line-height: 1.4;">
                  <%= link_to product.title, product_path(product),
                              class: "text-decoration-none text-dark stretched-link",
                              style: "font-size: 0.95rem;" %>
                </h6>
                <div class="mt-auto pt-2">
                  <p class="card-text mb-0 font-weight-bold text-primary" style="font-size: 1.1rem;">
                    $<%= sprintf("%.2f", product.price) %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- Pagination -->

    <% else %>
      <!-- No Products Message -->
      <div class="row">
        <div class="col-12">
          <div class="text-center py-5">
            <i class="fas fa-search text-muted mb-3" style="font-size: 3rem;"></i>
            <h4 class="font-weight-light text-muted">No products found</h4>
            <p class="text-muted">This category doesn't have any products yet.</p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Back Button -->
    <div class="row mt-4">
      <div class="col-12 text-center">
        <%= link_to categories_path, class: "btn btn-outline-primary" do %>
          <i class="fas fa-arrow-left mr-2"></i>Back to Categories
        <% end %>
      </div>
    </div>

  </div>
</div>

<style>
  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1) !important;
  }
  .pagination-wrapper .pagination {
    margin-bottom: 0;
  }
  .pagination-wrapper .page-link {
    color: #6c757d;
    border: 1px solid #dee2e6;
    padding: 0.5rem 0.75rem;
  }
  .pagination-wrapper .page-link:hover {
    color: #495057;
    background-color: #f8f9fa;
    border-color: #dee2e6;
  }
  .pagination-wrapper .page-item.active .page-link {
    background-color: #007bff;
    border-color: #007bff;
  }
  .btn-outline-primary:hover {
    transform: translateY(-1px);
  }
</style>